# valgrind
# depends on ! BACKEND

config DEBUG_valgrind

choice
    bool
    prompt "valgrind version"
# Don't remove next line
# CT_INSERT_VERSION_BELOW

config VALGRIND_V_3_6_1
    bool
    prompt "3.6.1 (EXPERIMENTAL)"
